<h2>Edit <%= @item.name %></h2>
<section id="edit_item">
  <%= form_with url: merchant_item_path(@merchant.id, @item.id), method: :patch, local: true do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, required: true, value: @item.name %>
    <br>
    <%= form.label :description %>
    <%= form.text_field :description, required: true, value: @item.description %>
    <br>
    <%= form.label :unit_price %>
    <%= form.text_field :unit_price, required: true, value: number_to_currency(@item.unit_price / 100) %>
    <br>
    <%= form.submit "Submit" %>
  <% end %>
</section>